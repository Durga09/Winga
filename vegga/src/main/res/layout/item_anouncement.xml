<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/anouncementBGIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/winga_bg_color"/>


    <LinearLayout
        android:id="@+id/anouncementLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fifteen"
        android:paddingRight="@dimen/ten"
        android:paddingTop="@dimen/ten">


        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="2 hours ago"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/address_text_color"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dotIv"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@drawable/blue_circle_bg" />

            <TextView
                android:id="@+id/anouncementTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/lato_regular"
                android:text="This is a notification"
                android:textColor="@color/address_text_color"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/anouncementDescriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/five"
            android:fontFamily="@font/lato_regular"
            android:text="This is notification Description. This is notification Description . This is notification Description. This is notification Description. This is notification Description. This is notification Description. "
            android:textColor="@color/address_hint_text_color"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/address_hint_text_color"

            />


    </LinearLayout>



</FrameLayout>