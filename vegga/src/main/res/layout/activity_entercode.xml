            <EditText
                android:id="@+id/codeEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/ten"
                android:hint="@string/enter_code"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/ten"
                android:maxLength="6"
                android:fontFamily="@font/lato_regular"
                android:paddingRight="@dimen/ten"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="18dp" />





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/five"
            android:paddingRight="@dimen/five"
>

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/ten"
                android:paddingTop="@dimen/five"
                android:paddingBottom="@dimen/five"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                tools:text="2:00" />


        <TextView
            android:id="@+id/resendCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/ten"
            android:paddingTop="@dimen/five"
            android:paddingBottom="@dimen/five"
            android:text="@string/resend_code"
            android:textSize="16dp"
            android:visibility="gone"
            android:textColor="@color/app_theme_red" />
        </RelativeLayout>

        <Button
            android:id="@+id/nextBtn"
            style="@style/button_style"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/eighty"
            android:gravity="center"
            android:layout_width="@dimen/button_width"
            android:fontFamily="@font/lato_regular"
            android:layout_gravity="center_horizontal"
            android:text="@string/next"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/changeMobBtn"
            style="@style/button_changemob_style"
            android:layout_width="@dimen/button_width"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/twenty"
            android:paddingBottom="@dimen/ten"
            android:paddingTop="@dimen/ten"
            android:fontFamily="@font/lato_regular"
            android:lines="1"
            android:text="@string/change_mob_num"
            android:textColor="@color/changemob_txt_color" />


    </LinearLayout>
