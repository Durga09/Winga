<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoIv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/winga_logo_height"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/forty"
            android:foregroundGravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/logo" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/thirty"
            android:layout_marginEnd="@dimen/thirty"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoIv" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:id="@+id/profileRL"
                android:layout_width="@dimen/profile_tab_width"
                android:layout_height="@dimen/profile_tab_height"
                android:background="@drawable/level_one"
                android:visibility="visible"
                tools:visibility="visible">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePicIV"
                    android:layout_width="@dimen/home_profile_pic_dimen"
                    android:layout_height="@dimen/home_profile_pic_dimen"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/twenty"
                    android:src="@drawable/ic_user_filled" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pointsRL"
                android:layout_width="@dimen/profile_tab_width"
                android:layout_height="@dimen/profile_tab_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/points_bg"
                android:minWidth="@dimen/profile_tab_width"
                android:visibility="visible"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/pointsLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <in.eightfolds.winga.utils.BernhcTextView
                        android:id="@+id/pointTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:paddingRight="@dimen/twenty"
                        android:textColor="@color/red_color"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:text="15000" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/home"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/home" />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>