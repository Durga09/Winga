<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/winga_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/closeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:src="@drawable/ic_cancel_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="55"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/not_live_screen_top_margin"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/not_live_screen_logo_height"
                    android:src="@drawable/logo_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/title_margin"
                    android:layout_marginBottom="@dimen/not_live_screen_share_code_margin"
                    android:gravity="center"
                    android:text="@string/tnx_for_registering"
                    android:textColor="@color/app_theme_red"
                    android:textSize="22dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/dateDescTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/winga_live_on"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/goLiveTimeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    android:visibility="visible"
                    tools:text="30 March 2019, 14:04PM" />

                <TextView
                    android:id="@+id/goLiveDescTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"
                    android:visibility="visible"
                    tools:text="Please come back on that date" />


                <LinearLayout
                    android:id="@+id/tapAreaLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"

                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/not_live_screen_share_code_margin"
                        android:gravity="center"
                        android:text="@string/you_can_refer_friends"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />


                    <TextView
                        android:id="@+id/referralCodeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="@dimen/thirty"
                        android:paddingRight="@dimen/thirty"
                        android:paddingBottom="@dimen/five"
                        android:textColor="@color/yellow_header_color"
                        android:textSize="@dimen/ref_code_text_size"
                        tools:text="EHE830" />


                    <TextView
                        android:id="@+id/tapToCopyTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/tap_to_copy"
                        android:textColor="@color/address_hint_text_color"
                        android:textSize="16dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/shareBtn"
                    style="@style/yesterday_winners_btn_style"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten"
                    android:paddingLeft="@dimen/twenty"
                    android:paddingRight="@dimen/twenty"
                    android:text="@string/share_code" />

                <TextView
                    android:id="@+id/logOutTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/ten"
                    android:text="@string/logout"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginBottom="@dimen/twenty_five"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>