<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/transcolorBlack_ninety">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exitIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:padding="@dimen/five"
            android:src="@drawable/ic_cancel"
            android:text="@string/exit"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/detailLL"
                android:layout_width="@dimen/reward_item_open_dimen"
                android:layout_height="@dimen/reward_item_open_dimen"
                android:layout_gravity="center"
                android:layout_margin="@dimen/ten"
                android:foregroundGravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/youWonIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rewards_yellow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/youWonTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:text="@string/you_won"
                                android:textColor="@color/colorBlack"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/giftTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="25dp"
                                android:gravity="center_horizontal"
                                android:maxLines="1"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                tools:text="1234567890" />

                            <TextView
                                android:id="@+id/poinstOrAmountTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                               tools:text="1234"
                                android:lines="1"
                                android:layout_marginTop="2dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"
                                android:textSize="14dp"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ten"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="Jun-25, 2018" />

            <TextView
                android:id="@+id/descTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ten"
                android:gravity="center_horizontal"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                tools:text="You won for referring your friend" />


            <TextView
                android:id="@+id/prizeAmountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ten"
                android:textColor="@color/yellow_header_color"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:text="499 /-" />

            <TextView
                android:id="@+id/prizeDeliveryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ten"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                tools:text="@string/item_delivered" />

            <LinearLayout
                android:id="@+id/paytmLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/forty"
                    android:layout_height="@dimen/forty"
                    android:layout_marginTop="@dimen/five"
                    android:src="@drawable/paytm" />

                <TextView
                    android:id="@+id/redeemToMobTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/ten"
                    android:textColor="@color/colorWhite"
                    tools:text="8143372251" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/voucherLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/voucherIV"
                    android:layout_width="@dimen/seventy"
                    android:layout_height="@dimen/seventy"
                    android:layout_marginTop="@dimen/five"
                    android:src="@drawable/voucher_default" />

                <LinearLayout
                    android:id="@+id/voucherDetailLL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/five"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/codeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:textColor="@color/colorWhite"
                        tools:text="Code: 8143372251" />

                    <TextView
                        android:id="@+id/pinTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:textColor="@color/colorWhite"
                        tools:text="Pin: 8143372251" />

                    <TextView
                        android:id="@+id/validTillTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:textColor="@color/colorWhite"
                        tools:text="Valid till: 21 Jan 2020" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/prizeDeliveryStatusMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ten"
                android:gravity="center"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                tools:text="Your paytm account is suspendendend please try again." />

            <Button
                android:id="@+id/redeemButton"
                style="@style/red_gradient_btn_style"
                android:layout_width="@dimen/button_width"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ten"

                android:gravity="center"
                android:text="@string/redeem"
                android:visibility="gone"
                tools:visibility="visible" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
