<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/winga_bg_color"
    android:orientation="vertical">

    <include layout="@layout/headerlay" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerLL"
        android:orientation="vertical"
        android:padding="@dimen/thirty">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@drawable/points" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalPointsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow_header_color"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    tools:text="1600" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:text="@string/total_points"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@drawable/points" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/redeemedPointsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow_header_color"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    tools:text="900" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:text="@string/redeemed_points"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:fontFamily="@font/lato_regular"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@drawable/points" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/availablePointsTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/yellow_header_color"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato_regular"
                        tools:text="700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:text="@string/available_points"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp"
                        android:fontFamily="@font/lato_regular"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/availableRupeesTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:textColor="@color/address_hint_text_color"
                    android:textSize="16dp"
                    tools:text="300 rupees" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fifty"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/redeem_points"
                android:textColor="@color/address_hint_text_color"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/redeemPointsET"
                style="@style/redeemEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="number"
                tools:text="700" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/rupeesConversionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/five"
                    android:textColor="@color/address_hint_text_color"
                    android:textSize="14dp"
                    tools:text="Rs. 100" />

                <TextView
                    android:id="@+id/minRedeemPointsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/five"
                    android:textColor="@color/address_hint_text_color"
                    android:textSize="14dp"
                    tools:text="@string/minimum_x_points" />


            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginBottom="@dimen/five"
            android:layout_marginTop="@dimen/twenty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/yellow_header_color"
                android:text="@string/transfer_may_fail_paytm" />

            <ImageView
                android:id="@+id/failureReasonsIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                app:tint="@color/status_bar_color"
                android:src="@drawable/ic_info_yellow" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/redeemPointsLL"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/forty"
            android:background="@drawable/red_gradient_button_bg"
            android:gravity="center"
            android:minWidth="@dimen/button_width"
            android:paddingLeft="@dimen/twenty"
            android:paddingRight="@dimen/twenty">

            <ImageView
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@drawable/ic_coins" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:lines="1"
                android:text="@string/redeem_points"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:fontFamily="@font/lato_regular"
                android:textStyle="bold" />


        </LinearLayout>

        <fragment
            android:id="@+id/adFragment"
            android:name="in.eightfolds.winga.fragment.AdBannerFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>