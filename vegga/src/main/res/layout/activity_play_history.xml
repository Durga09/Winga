<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/winga_bg_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/adBannerFragment">

        <in.eightfolds.winga.utils.CustomImageView
            android:id="@+id/backgroundIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/noplayhistory"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/adBannerFramgnet"
            android:animateLayoutChanges="true"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.eightfolds.winga.utils.CustomImageView
                    android:id="@+id/bgImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/loyalitypoints"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/backIv"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/ten"
                        android:padding="@dimen/five"
                        android:src="@drawable/ic_back_black" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/thirty"
                        android:layout_marginTop="@dimen/title_margin"
                        android:text="@string/play_history"
                        android:textColor="@color/colorBlack"
                        android:textSize="32dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/thirty"
                        android:text="@string/day_by_day"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp" />


                </LinearLayout>

            </RelativeLayout>


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/loyaltyPointsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/fifteen"
                    android:paddingRight="@dimen/fifteen"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/item_play_history_lay" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/noItemsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/adBannerFragment"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_history"
            android:textColor="@color/no_history_color"
            android:textSize="22dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/play_multiple_days"
            android:textColor="@color/no_history_color"
            android:textSize="18dp"
            android:visibility="visible" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/and_win_gifts"
            android:textColor="@color/no_history_color"
            android:textSize="18dp"
            android:visibility="visible" />

        <in.eightfolds.winga.utils.CustomImageView
            android:layout_width="@dimen/no_items_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/thirty"
            android:layout_marginTop="@dimen/thirty"
            android:adjustViewBounds="true"
            android:src="@drawable/no_games"

            />


    </LinearLayout>


    <fragment
        android:id="@+id/adBannerFragment"
        android:name="in.eightfolds.winga.fragment.AdBannerFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>