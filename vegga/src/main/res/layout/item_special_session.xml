<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="@dimen/ten"
    tools:background="@color/winga_bg_color">




    <TextView
        android:id="@+id/dateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text= "Jul - 11,2018"
        android:textColor="@color/yellow_header_color"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="09:00 AM - 12:30 AM"
            android:textColor="@color/no_history_color"
            android:textSize="14dp"
            />


        <LinearLayout
            android:id="@+id/giftsLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty"
            android:visibility="gone">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gift"/>

            <TextView
                android:id="@+id/numberOfGiftsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="500"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/five"
                android:textStyle="bold"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/giftNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=" Pendrives"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="2dp"
                android:textSize="10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginBottom="@dimen/ten"
        android:background="@color/no_history_color"/>

</LinearLayout>