<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_view_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cLL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/twenty"
    android:layout_marginBottom="@dimen/twenty_five">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/productImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/no_image_p"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_width="1dp"
        app:riv_corner_radius="5dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:fontFamily="@font/lato_regular"
        android:gravity="start"
        android:maxHeight="50dp"
        android:maxLines="2"
        android:textColor="@color/colorBlack"

        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productImage"
        tools:text="shower Gel" />

    <TextView
        android:id="@+id/productDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:maxLines="2"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/fifteen"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Skin care, hair care,fragrances bath and bod" />

    <TextView
        android:id="@+id/discountPriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/twelve"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/actualPriceTv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productDesc"
        tools:text="949" />

    <TextView
        android:id="@+id/actualPriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/quantum_grey"
        android:textSize="@dimen/twelve"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/discountPriceTv"
        app:layout_constraintEnd_toStartOf="@+id/discount"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/discountPriceTv"
        app:layout_constraintTop_toTopOf="@id/discountPriceTv"
        app:layout_constraintVertical_bias="0.0"
        tools:text="1499" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/green_circle_color"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/actualPriceTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/actualPriceTv"
        app:layout_constraintTop_toTopOf="@id/actualPriceTv"
        app:layout_constraintVertical_bias="1.0"
        tools:text="33% off" />


</androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>