<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mailLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragmentFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <ImageView
        android:id="@+id/logoIv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/winga_logo_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/forty"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLL"
        android:layout_below="@id/logoIv">


        <LinearLayout
            android:id="@+id/specialSessionLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/special_session_ic_margin_right"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/specialSessiontimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"
                android:visibility="visible"
                tools:text="5 h 10 m" />

            <ImageView
                android:id="@+id/specialSessionSoonIv"
                android:layout_width="@dimen/special_session_ic_width"
                android:layout_height="@dimen/special_session_ic_height"
                android:scaleType="fitCenter"
                android:src="@drawable/specialsessionsoon"
                tools:visibility="visible" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/contentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/home_left_right_margin"
            android:paddingRight="@dimen/home_left_right_margin"
            android:paddingBottom="@dimen/five">

            <LinearLayout
                android:id="@+id/timeLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">

                <in.eightfolds.winga.utils.BrushScriptTextView
                    android:id="@+id/timeTopTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/hurry_text"
                    android:textColor="@color/text_color"
                    android:textSize="38dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    android:visibility="gone"
                    tools:visibility="visible" />


                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/forty"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    tools:text="5 h 10 m" />


                <TextView
                    android:id="@+id/leftForSessionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"

                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textColor="@color/text_color"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    tools:text="@string/left_for_today_draw" />
            </LinearLayout>

            <ImageView
                android:id="@+id/playIv"
                android:layout_width="@dimen/play_icon_width"
                android:layout_height="@dimen/play_icon_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/home_middle_margin"
                android:layout_marginBottom="@dimen/home_middle_margin"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitCenter"
                tools:src="@drawable/specialsession" />


            <TextView
                android:id="@+id/gameMsgTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"
                tools:text="Congratulations, You are eligible for today's lucky draw. Keep playiung to increase your chances of winning lucky " />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/yesterdayWinnersBtn"
            style="@style/yesterday_winners_btn_style"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/five"
            android:layout_marginBottom="@dimen/ten"
            android:gravity="center"
            android:lines="1"
            android:visibility="visible"
            android:text="@string/yesterday_winner" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/profileRL"
                android:layout_width="@dimen/profile_tab_width"
                android:layout_height="@dimen/profile_tab_height"
                android:background="@drawable/level_one"
                android:visibility="visible"
                tools:visibility="visible">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePicIV"
                    android:layout_width="@dimen/home_profile_pic_dimen"
                    android:layout_height="@dimen/home_profile_pic_dimen"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/twenty"
                    android:src="@drawable/ic_user_filled" />
            </RelativeLayout>
                 <ImageView
                     android:id="@+id/home"
                     android:layout_width="120dp"
                     android:layout_height="50dp"
                     android:src="@drawable/home"
                     android:layout_centerInParent="true"
                     />
            <RelativeLayout
                android:id="@+id/pointsRL"
                android:layout_width="@dimen/profile_tab_width"
                android:layout_height="@dimen/profile_tab_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/points_bg"
                android:minWidth="@dimen/profile_tab_width"
                android:visibility="visible"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/pointsLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <in.eightfolds.winga.utils.BernhcTextView
                        android:id="@+id/pointTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/twenty"
                        android:textColor="@color/red_color"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato_regular"
                        tools:text="15000" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/addBannerFL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/banner_height"
            android:background="@color/winga_bg_color"
            android:visibility="visible" />


        <!--
                <fragment
                    android:id="@+id/fragment"
                    android:name="in.eightfolds.winga.fragment.AdBannerFragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/banner_height"
                    android:layout_gravity="center_horizontal" />
        -->


    </LinearLayout>
</RelativeLayout>