<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/childLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >


        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"

            android:src="@drawable/logo"

            app:layout_constraintBottom_toBottomOf="parent"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/twenty"
            android:src="@drawable/ic_scan_qr"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/childLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="@color/status_bar_color"
                app:sliderScrollTimeInSec="3"
                app:sliderStartAutoCycle="true" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featureGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginEnd="@dimen/twenty"
                android:gravity="center"
                android:listSelector="@android:color/transparent"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/language_ver_spacing"
                app:layout_constraintEnd_toEndOf="@id/imageSlider"

                app:layout_constraintStart_toStartOf="@id/imageSlider"
                app:layout_constraintTop_toBottomOf="@id/imageSlider"

                tools:listitem="@layout/v2_item_feature" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/profileRL"
            android:layout_width="@dimen/profile_tab_width"
            android:layout_height="@dimen/profile_tab_height"
            android:background="@drawable/level_one"

            android:visibility="visible"
            tools:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicIV"
                android:layout_width="@dimen/home_profile_pic_dimen"
                android:layout_height="@dimen/home_profile_pic_dimen"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/twenty"
                android:src="@drawable/ic_user_filled" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pointsRL"
            android:layout_width="@dimen/profile_tab_width"
            android:layout_height="@dimen/profile_tab_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/points_bg"

            android:minWidth="@dimen/profile_tab_width"
            android:visibility="visible"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/pointsLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <in.eightfolds.winga.utils.BernhcTextView
                    android:id="@+id/pointTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/twenty"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/red_color"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold"
                    tools:text="15000" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>