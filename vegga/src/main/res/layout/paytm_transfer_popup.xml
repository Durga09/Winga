<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/contentLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popUpHeaderRL"
        android:background="@drawable/yellow_round_corner_bg"
        android:orientation="vertical"
        android:padding="@dimen/twenty">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/redeem_points_to"
            android:textSize="22dp"
            android:layout_marginTop="@dimen/fifteen"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/forty"
            android:src="@drawable/paytm_logo"
            android:layout_marginTop="@dimen/fifteen"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paytm_number"
            android:layout_marginTop="@dimen/thirty"
            android:textColor="@color/address_hint_text_color"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:textColor="@color/address_hint_text_color"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <in.eightfolds.utils.AutoFillEditText
                android:id="@+id/mobileNumET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="8143372251"
                android:paddingBottom="@dimen/ten"
                android:layout_marginLeft="@dimen/fifteen"
                android:textSize="20dp"
                android:inputType="number"
                android:maxLength="10"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:backgroundTint="@color/trasparant" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/address_hint_text_color"/>


        <TextView
            android:id="@+id/redeemedRupeesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            tools:text="@string/x_rupees_transfer_to_paytm"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:layout_marginBottom="@dimen/sixty" />


    </LinearLayout>



    <Button
        android:id="@+id/continueBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:minWidth="@dimen/button_width"
        android:layout_below="@+id/contentLL"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="-25dp"
        android:background="@drawable/red_gradient_button_bg"
        android:paddingLeft="@dimen/twenty"
        android:paddingRight="@dimen/twenty"
        android:text="@string/continue_text"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:textStyle="bold" />


</RelativeLayout>

