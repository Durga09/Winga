<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/winga_bg_color">
    <ImageView
        android:id="@+id/luckyDrawIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/giphy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/congratsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginRight="@dimen/thirty"
        android:gravity="center"
        android:text="@string/congratulations"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/thirty"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/nameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginRight="@dimen/thirty"
        android:gravity="center"
        tools:text="Sagar"
        android:lines="1"
        android:textStyle="bold"
        android:textColor="@color/app_theme_red"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/congratsTv"
        app:layout_constraintStart_toStartOf="@id/congratsTv"
        app:layout_constraintEnd_toEndOf="@id/congratsTv"

        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/nameTv"
        app:layout_constraintEnd_toEndOf="@id/nameTv"
        app:layout_constraintTop_toBottomOf="@id/nameTv"
        app:layout_constraintBottom_toBottomOf="parent"

        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >






        <TextView
            android:id="@+id/pointsWonTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:layout_marginTop="@dimen/fifteen"
            android:gravity="center"
            tools:text="@string/you_are_lucky_star"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/contactTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:layout_marginTop="@dimen/twenty"
            android:gravity="center"
            tools:text="@string/contact_for_info"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/pointsWonTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/thirty"
            app:layout_constraintBottom_toTopOf="@id/playmoreGamesRL"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/playmoreGamesRL"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/twenty"
            android:background="@drawable/button_bg"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/thirty"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/play_more_games"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/sixty"
                android:layout_height="@dimen/sixty"
                android:layout_alignParentRight="true"
                android:src="@drawable/star" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
