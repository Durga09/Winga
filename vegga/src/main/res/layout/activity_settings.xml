<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/settings"
            android:scaleType="centerCrop"
            app:tint="@color/winga_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <include layout="@layout/headerlay" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/changePasswordLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginRight="@dimen/ten"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/fifteen"
                    android:paddingTop="@dimen/fifteen">

                    <ImageView
                        style="@style/profile_icon_style"
                        android:src="@drawable/ic_password_blue" />

                    <TextView
                        android:id="@+id/changePasswordTv"
                        style="@style/settings_option_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/change_password" />
                </LinearLayout>

                <View
                    android:id="@+id/changePasswordView"
                    style="@style/settings_option_seperatorview_style" />


                <LinearLayout
                    android:id="@+id/alertPromotionsLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginRight="@dimen/ten"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/fifteen"
                    android:paddingTop="@dimen/fifteen">

                    <ImageView
                        style="@style/profile_icon_style"
                        android:src="@drawable/ic_accept_alerts" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/iAcceptTv"
                            style="@style/settings_option_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/i_accept" />

                        <TextView
                            android:id="@+id/alertsPromsUpdatesTv"
                            style="@style/settings_option_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="0.5dp"
                            android:layout_marginLeft="@dimen/three"
                            android:gravity="bottom"
                            android:text="@string/alerts_promos_updates"
                            android:textColor="@color/app_theme_red"
                            android:textSize="12dp" />
                    </LinearLayout>


                </LinearLayout>

                <View style="@style/settings_option_seperatorview_style" />


                <LinearLayout
                    android:id="@+id/deactivateAccLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginRight="@dimen/ten"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/fifteen"
                    android:paddingTop="@dimen/fifteen">

                    <ImageView
                        style="@style/profile_icon_style"
                        android:src="@drawable/ic_deactivate" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/deactivateAccTv"
                            style="@style/settings_option_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/deactivate_acct" />

                        <CheckBox
                            android:id="@+id/deactivateAccSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/ten"
                            android:background="@null"
                            android:button="@drawable/switch_selector"
                            android:thumb="@android:color/transparent"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>

                <View style="@style/settings_option_seperatorview_style" />

                <LinearLayout
                    android:id="@+id/languagesLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginRight="@dimen/ten"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/fifteen"
                    android:paddingTop="@dimen/fifteen">

                    <ImageView
                        style="@style/profile_icon_style"
                        android:src="@drawable/ic_languages" />

                    <TextView
                        android:id="@+id/languagesTv"
                        style="@style/settings_option_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/languages" />
                </LinearLayout>

                <View style="@style/settings_option_seperatorview_style" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/preferredStateTitleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty"
                        android:layout_marginTop="@dimen/twenty"
                        android:gravity="center_vertical"
                        android:text="@string/preferred_state"
                        android:textColor="@color/app_theme_red"
                        android:textSize="14dp" />


                    <LinearLayout
                        android:id="@+id/selectPreferredStateLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/fifteen"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/ic_placeholder" />


                        <Spinner
                            android:id="@+id/preferredStateSpinner"
                            style="@style/spinner_style"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_marginRight="@dimen/fifteen"

                            android:layout_weight="1"
                            android:backgroundTint="@color/address_hint_text_color"
                            android:prompt="@string/preferred_state"
                            android:spinnerMode="dialog"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/preferredStateTv"
                            style="@style/settings_option_text_style"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/select_preferred_state"
                            android:visibility="gone" />


                        <ImageView
                            android:layout_width="@dimen/ten"
                            android:layout_height="@dimen/ten"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_marginRight="@dimen/twenty_five"
                            android:src="@drawable/ic_drop_down_arrow"
                            android:visibility="gone" />


                    </LinearLayout>

                    <View
                        style="@style/settings_option_seperatorview_style"
                        android:visibility="gone" />

                </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/preferredContentTitleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty"
                        android:layout_marginTop="@dimen/twenty"
                        android:gravity="center_vertical"
                        android:text="@string/preferred_content"
                        android:textColor="@color/app_theme_red"
                        android:textSize="14dp" />


                    <LinearLayout
                        android:id="@+id/selectPreferredContentLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/twenty"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/fifteen"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/ic_content" />


                        <Spinner
                            android:id="@+id/preferredContentSpinner"
                            style="@style/spinner_style"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_marginRight="@dimen/fifteen"

                            android:layout_weight="1"
                            android:backgroundTint="@color/address_hint_text_color"
                            android:prompt="@string/preferred_content"
                            android:spinnerMode="dialog"
                            android:visibility="visible" />


                        <TextView
                            android:id="@+id/preferredContentTv"
                            style="@style/settings_option_text_style"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/select_preferred_state"
                            android:visibility="gone" />


                        <ImageView
                            android:layout_width="@dimen/ten"
                            android:layout_height="@dimen/ten"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_marginRight="@dimen/twenty_five"
                            android:src="@drawable/ic_drop_down_arrow"
                            android:visibility="gone" />


                    </LinearLayout>

                    <View
                        style="@style/settings_option_seperatorview_style"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/adFragment"
        android:name="in.eightfolds.winga.fragment.AdBannerFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal" />


</RelativeLayout>