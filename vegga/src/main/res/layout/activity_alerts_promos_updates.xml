<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/settings"
        android:backgroundTint="@color/winga_bg_color"
        android:orientation="vertical">

        <include layout="@layout/headerlay" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twenty">

                <TextView
                    android:id="@+id/alertsTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alerts"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/address_text_color"
                    android:textSize="18dp" />


                <CheckBox
                    android:id="@+id/alertsCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:button="@drawable/switch_selector"
                    android:gravity="end" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/address_hint_text_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twenty">

                <TextView
                    android:id="@+id/promosTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/promotions"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/address_text_color"
                    android:textSize="18dp" />


                <CheckBox
                    android:id="@+id/promosCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:button="@drawable/switch_selector"
                    android:gravity="end" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/address_hint_text_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/twenty">

                <TextView
                    android:id="@+id/updatesTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/updates"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/address_text_color"
                    android:textSize="18dp" />


                <CheckBox
                    android:id="@+id/updatesCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:button="@drawable/switch_selector"
                    android:gravity="end" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/address_hint_text_color" />


        </LinearLayout>

    </LinearLayout>

    <fragment
        android:id="@+id/adFragment"
        android:name="in.eightfolds.winga.fragment.AdBannerFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>