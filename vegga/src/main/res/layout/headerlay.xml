<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/profile_tab_height"
    android:background="@color/status_bar_color"
    android:orientation="horizontal"
    android:id="@+id/headerLL">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/searchIv"
        android:layout_toStartOf="@+id/searchIv"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ten"
            android:padding="@dimen/five"
            android:src="@drawable/ic_back_header" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ten"
            android:singleLine="true"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/winga_bg_color"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="@string/app_name" />

        <EditText
            android:id="@+id/searchET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/search_edit_text_style"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_regular"
            android:backgroundTint="@color/colorBlack"
            android:drawableRight="@drawable/ic_search"
            android:hint="@string/search"
            android:visibility="gone" />

        <!--
                <android.support.v7.widget.SearchView
                    android:id="@+id/searchView"
                    style="@style/SearchViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:queryHint="Search"
                    app:iconifiedByDefault="false">

                </android.support.v7.widget.SearchView>
        -->
    </LinearLayout>


    <ImageView
        android:id="@+id/searchIv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/ten"
        android:layout_toLeftOf="@+id/headerRightIconIv"
        android:foregroundGravity="center"
        android:paddingBottom="@dimen/ten"
        android:paddingLeft="@dimen/ten"
        android:paddingTop="@dimen/ten"
        android:src="@drawable/ic_search"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/headerRightIconIv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/ten"
        android:foregroundGravity="center"
        android:paddingBottom="@dimen/ten"
        android:paddingLeft="@dimen/ten"
        android:paddingRight="@dimen/twenty"
        android:paddingTop="@dimen/ten"
        android:src="@drawable/ic_calendar"
        android:visibility="gone" />

    <TextView
        android:id="@+id/doneTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:gravity="center"
        android:fontFamily="@font/lato_regular"
        android:padding="@dimen/five"

        android:text="@string/done"
        android:textColor="@color/colorBlack"
        android:visibility="gone" />


</RelativeLayout>
