<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/congratsLL1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/winga_bg_color"
    android:visibility="gone"
    tools:visibility="visible">

    <RelativeLayout
        android:id="@+id/congratsRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/congratsTopRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">


            <in.eightfolds.winga.utils.CustomImageView
                android:id="@+id/congratsTopIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/win_top_one" />


            <!--
                        <ImageView
                            android:id="@+id/congratsTopIv"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="top"
                            android:scaleType="fitXY"
                            android:src="@drawable/win_top_one"
                            android:visibility="gone"/>
            -->


            <!--
                        <ImageView
                            android:id="@+id/congratsCenterIv"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="100dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/win_center_one" />
            -->


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hundred"
            android:orientation="vertical">

            <in.eightfolds.winga.utils.CustomImageView
                android:id="@+id/congratsCenterIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:src="@drawable/win_center_one" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/centerDescTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/twenty_five"
                    android:layout_marginRight="@dimen/twenty_five"
                    android:gravity="center"
                    android:paddingTop="@dimen/twenty_five"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    tools:text="Congratulations /n You have won 6 ames so far. keep playing more games to increate your chance of winnin and earning more points" />


            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <in.eightfolds.winga.utils.CustomImageView
                android:id="@+id/congratsBottomIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:src="@drawable/win_bottom_one" />


            <!--
                        <ImageView
                            android:id="@+id/congratsBottomIv"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/win_bottom_one" />
            -->


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
