<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/winnersbg"
    android:orientation="vertical"
    tools:background="@color/winga_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <in.eightfolds.winga.utils.CustomImageView
            android:id="@+id/bgImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/winnersstrip"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backIv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/ten"
                android:padding="@dimen/five"
                android:src="@drawable/ic_back_black" />


            <TextView
                android:id="@+id/pointsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty"
                android:text="@string/winners"
                android:textColor="@color/colorBlack"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty_five"
                android:text="@string/history"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/contentRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/five"
            android:text="@string/yesterday_winner"
            android:textColor="@color/yellow_header_color"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/selectedDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTv"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/five"
            android:gravity="center_vertical"
            android:textColor="@color/yellow_header_color"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:text="13th April, 2018" />


        <LinearLayout
            android:id="@+id/noItemsLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectedDateTv"
            android:layout_marginTop="@dimen/twenty"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/no_winners"
                android:textColor="@color/no_history_color"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/selectedDateDescTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/on_selected_date"
                android:textColor="@color/no_history_color"
                android:textSize="16dp"
                android:visibility="visible" />

            <in.eightfolds.winga.utils.CustomImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/nowinners" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentWinnersSessionRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomLL"
            android:layout_below="@id/selectedDateTv"
            android:paddingTop="@dimen/ten"
            tools:listitem="@layout/recent_winners_session_item"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/bottomLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/calenderLL"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/twenty"
                android:layout_marginTop="@dimen/fifteen"
                android:background="@drawable/red_gradient_button_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:text="@string/pick_the_date"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <fragment
                android:id="@+id/fragment"
                android:name="in.eightfolds.winga.fragment.AdBannerFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>