<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/congratsLL4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/win_four"
    android:visibility="gone"
    tools:visibility="visible">

    <RelativeLayout
        android:id="@+id/congratsRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/congratsTopRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <in.eightfolds.winga.utils.CustomImageView
                android:id="@+id/congratsTopIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:src="@drawable/win_top_one" />


            <!--<ImageView
                android:id="@+id/congratsTopIv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:src="@drawable/win_top_one" />



            <ImageView
                android:id="@+id/congratsCenterIv"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/win_center_four" />-->


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <in.eightfolds.winga.utils.CustomImageView
                android:id="@+id/congratsCenterIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:src="@drawable/win_center_four" />


            <TextView
                android:id="@+id/centerDescTv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/twenty_five"
                android:layout_marginRight="@dimen/twenty_five"
                android:gravity="center"
                android:paddingTop="@dimen/twenty_five"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                tools:text="Congratulations /n You have won 6 ames so far. keep playing more games to increate your chance of winnin and earning more points" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/playMoreRL4"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/forty"
            android:layout_marginTop="@dimen/forty"
            android:background="@drawable/red_gradient_button_bg"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/play_more_games"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/sixty"
                android:layout_height="@dimen/sixty"
                android:layout_alignParentRight="true"
                android:src="@drawable/star" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
